{
  "compilerOptions": {
    "target":"ES6",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": false,
    "diagnostics": false,
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": "."
  },
  "filesGlob": [
    "./src/**/*.ts",
    "./test/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "admin/webapp/node_modules",
    "workspace/**/*",
    "public/**/*",
    "assets/**/*",
    "typings/**/*",
    "src/resources/wildcat/**/*"
  ]
}